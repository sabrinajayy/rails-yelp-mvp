<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Reviews:</strong>
  <ul>
  <%= @restaurant.reviews.each do |review| %>
    <li><%= review.rating %>
    <p><%= review.content %></p></li>
  <%end%>
  </ul>
</p>

